    "lint": "eslint script.js",
    "format": "prettier --write *.html *.css *.js"
  },
  "keywords": [
    "amazon",
    "clone",
    "ecommerce",
    "india",
    "responsive",
    "html",
    "css",
    "javascript",
    "frontend",
    "web-development"
  ],
