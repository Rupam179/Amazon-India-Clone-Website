  "repository": {
    "type": "git",
    "url": "https://github.com/rupam179/amazon-india-clone.git"
  },
  "homepage": "https://rupam179.github.io/amazon-india-clone",
  "bugs": {
    "url": "https://github.com/rupam179/amazon-india-clone/issues"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "gh-pages": "^6.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3"
  },
