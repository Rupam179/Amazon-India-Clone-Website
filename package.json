{
  "name": "amazon-india-clone",
  "version": "1.0.0",
  "description": "A pixel-perfect clone of Amazon India's e-commerce website with responsive design and interactive features",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --open=/index.html",
